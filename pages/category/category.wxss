.container {
  display: flex;
  flex-wrap: wrap;
  margin-right: 25rpx;
}

.cate-card {
  width: 50%;
}

.card-wrap {
  box-shadow: 0 15rpx 30rpx 0 rgba(0,0,0,0.11),
            0 5rpx 15rpx 0 rgba(0,0,0,0.08);
  box-sizing: border-box;
  margin-top: 25rpx;
  margin-left: 25rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.cate-picture {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx
}

.cate-info {
  font-weight: 500;
  color: #868686;
  margin-bottom: 20rpx;
}