/**index.wxss**/
.container {
  text-align: center;
}

.userinfo {
  padding-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-split {
    width: 100%;
    height: 14rpx;
    background-color: #eee;
    border-top: 1px solid #e2e2e2;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}