<template name="vol">
  <view class="vol-card" data-vol-id="{{item.hpcontent_id}}" catchtap="viewDetailTap">
    <image class="vol-picture" src="{{item.hp_img_url}}" mode="aspectFill"></image>
    <view class="vol-title">
      <text>{{item.hp_title}}</text>    
    </view>
    <view class="vol-author">
      <text>{{item.hp_author}}</text>
    </view>
    <view class="vol-makettime">
      <text>{{item.hp_makettime}}</text>
    </view>
    <view class="vol-more" catchtap="viewMoreTap">
      <text>More.</text>
    </view>
  </view>
</template>