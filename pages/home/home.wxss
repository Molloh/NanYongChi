/* pages/home/home.wxss */

wx-swiper-item {
  width: 90% !important;
  margin-left: 5% !important;
}

.container {
  height: 90%;
  padding: 20px;
  border-top: 1px solid #eee;
}

.vol-swiper {
  height: 100%;
}

.vol-swiper-item {
  padding: 15rpx;
  box-sizing: border-box;
  position: relative;
  height: 100%;
}

.vol-swiper-sub-item {
  padding: 20rpx;
  box-sizing: border-box;
  border: 2px solid #ccc;
  position: relative;
  height: 100%;
}

.vol-card {
  text-align: center;
  height: 100%;
}

.vol-picture {
  width: 100%;
}

.vol-title {
  font-size: 40rpx;
  margin: 30rpx 0;
}

.vol-author {
  font-size: 32rpx;
}

.vol-makettime {
  font-size: 24rpx;
  border-bottom: 1px solid #ccc;
  padding: 50rpx 0;
}

.vol-more {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  color: #c1403d;
  font-size: 40rpx;
}
