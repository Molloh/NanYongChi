/* pages/home/home.wxss */

.container {
  position: fixed;
  height: 100%;
  width: 100%;
}

.card-info {
  padding-left: 45rpx;
  bottom: 0;
}

@-webkit-keyframes slideInUp {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.animated_title {
  font-weight: bold;
  font-size: 2.5em;
/*animation*/
        -webkit-animation: slideInUp 2s;
        animation: slideInUp 2s;
/*animation-iteration-count*/
        -webkit-animation-iteration-count: 1;
        animation-iteration-count: 1;
/*animation-delay*/
        -webkit-animation-delay: 0s;
        animation-delay: 0s;
}

.title {
  font-weight: bold;
  font-size: 2.5em;
}

.sub-title {
  font-size: 1em;
  font-weight: lighter;
  color: #ccc;
}

.recommend-swiper {
  margin-top: 15rpx;
  height: 80%;
}

.recommend-swiper-item {
  box-sizing: border-box;
  position: relative;
}

.recommend-swiper-sub-item {
  height: 90%;
  margin: 0 15rpx 0 15rpx;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  box-shadow: 0 15rpx 30rpx 0 rgba(0,0,0,0.11),
            0 5rpx 15rpx 0 rgba(0,0,0,0.08);
}

.recommend-card {
  height: 100%;
}

.rec-picture {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  width: 100%;
  height: 15em;
}

.rec-info {
  z-index: 2;
  background-color: #fff;
  padding: 16rpx 24rpx 24rpx 24rpx;
}

.rec-category {
  font-family: 'Raleway', sans-serif;
  text-transform: uppercase;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  font-weight: 500;
  color: #868686;
}

.rec-discription {
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  font-family: 'Roboto Slab', serif;
}

.rec-by {
  font-size: 18rpx;
  font-family: 'Raleway', sans-serif;
  font-weight: 500;
}

.rec-author {
  font-size: 32rpx;
  font-weight: 600;
  text-decoration: none;
  color: #AD7D52;
}

.recommend-swiper .wx-swiper-dot-active::before{
    background:#AD7D52;    
}

.bttn {
  right: 15rpx;
  bottom: 35rpx;
  position: absolute;
  display: flex;
  
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
}

.scan {
  align-self: flex-end;
  margin-right: 15rpx;
  margin-bottom: 5rpx;
  height: 2.5em;
  width: 2.5em;
}

.split {
  background: #E0E3DA;
  width: 3rpx;
  height: 1.75em;
}

.user {
  height: 2em;
  width: 2em;
}

.more {
  font-size: 1.5em;
  position: relative;
  margin-right: 10rpx;
  list-style-type: none;
  cursor: pointer;
  color: rgb(117, 115, 115);
}

.more::after {
  content: '';
  position: absolute;
  z-index: -1;
  left: 50%;
  transform: translateX(-50%) rotate(0deg);

  background: #A1D3A2;

  clip-path: polygon(6% 10%, 100% 0, 64% 65%, 28% 65%);
  height: 85rpx;
  width: 75rpx;
  bottom: -15rpx;
  animation: stretch 2s ease infinite;
}

.more:hover::after {
  animation: boink 1s ease forwards 1;
  color: #000;
}

@keyframes boink {
    80% {
      transform: scaleX(1.9) scaleY(.6) translateX(-30%) 
    }
}

@keyframes stretch {
    25% { 
      transform: translateX(-50%) rotate(2deg) scaleY(.93)
    }
    50% { 
      transform: translateX(-50%) rotate(-2deg) scaleX(.93); 
      clip-path: polygon(6% 20%, 100% 0, 64% 65%, 28% 65%) 
    }
    75% {
      transform: translateX(-50%) rotate(3deg) scale(1.05)
    }
}