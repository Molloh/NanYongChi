<!--pages/home/detail/detail.wxml-->
<view class="container">
  <image mode="aspectFit" src="{{detail.hp_img_url}}" class="vol-picture"></image>
  <view class="vol-meta">
    <text class="vol-author">设计&{{detail.hp_author}} 作品</text>
    <text class="vol-const">发表于</text>
    <text class="vol-makettime">{{detail.hp_makettime}}</text>
  </view>
  <text class="vol-title">{{detail.hp_title}}</text>
  <view class="vol-tool">
    <view class="vol-horizon"></view>
  </view>
  <text class="vol-content">{{detail.hp_content}}</text>
  <view class="comment">
    <text class="text">全部评论</text>
    <view class="split"></view>
    <view class="comment-list">
      <block wx:for="{{comments}}" wx:key="id">
        <view class="comment-item">
          <view class="comment-header">
            <image class="comment-user-avatar" src="{{item.avatarURL}}"></image>
            <text class="comment-user-name">{{item.nickname}}</text>
             <text class="comment-date">{{item.comTime}}</text>
          </view>
          <view class="comment-main">
            <text>{{item.dcomment}}</text>
          </view>
          <view class="comment-footer">
            <image class="comment-praise-image" src="/images/icon/praise.png"></image>
            <text class="comment-praise-num">{{item.numLike}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>
  <view class="footer-wrapper">
      <view class="footer-praise">
        <image src="/images/icon/favorite.png"></image>
      </view>
      <view class="footer-comment">
        <image src="/images/icon/share.png" />
      </view>
      <view class="footer-content">
          <text>{{serial.praisenum}} 喜欢 · {{serial.commentnum}} 评论</text>
      </view>
  </view>
</view>